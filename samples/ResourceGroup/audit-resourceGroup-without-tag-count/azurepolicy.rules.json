{
  "mode": "all",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Resources/subscriptions/resourceGroups"
        },
        {
          "value": "[less(length(field('tags')), int(parameters('tagCount')))]",
          "equals": "true"
        }
      ]
    },
    "then": {
      "effect": "audit"
    }
  },
  "parameters": {}
}